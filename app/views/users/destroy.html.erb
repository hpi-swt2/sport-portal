<%- model_class = User -%>

<%= render partial: 'application/validation_errors', locals: {model: @user} %>

<div class="page-header">
  <h1><%= t 'helpers.titles.delete', model: model_class.model_name.human.titleize %></h1>
</div>

<%= form_with(url: delete_user_path(@user), html: { class: 'form-horizontal user', method: :post }) do |f| %>
  <div class="form-group">
    <%= f.label :password, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      <%= f.error_span(:password) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit t('.confirm'), class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t('helpers.links.cancel')),
                  user_path(@user), class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

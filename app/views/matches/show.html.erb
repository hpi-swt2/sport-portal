<%- model_class = Match -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<%
def participant_link(participant, participant_type)
  if participant
    if participant_type == 'Match'
      return link_to('Gewinner ' + participant.name, match_path(participant))
    else
      return link_to(participant.name, team_path(participant))
    end
  else
    return '---'
  end
end
%>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:gameday) %>:</strong></dt>
  <dd><%= @match.gameday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:place) %>:</strong></dt>
  <dd><%= @match.place %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team_home_id) %>:</strong></dt>
  <dd><%= participant_link @match.team_home, @match.team_home_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team_away_id) %>:</strong></dt>
  <dd><%= participant_link @match.team_away, @match.team_away_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score_home) %>:</strong></dt>
  <dd><%= @match.score_home %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score_away) %>:</strong></dt>
  <dd><%= @match.score_away %></dd>
</dl>

<%# app/helpers/button_helper.rb %>
<%= back_btn %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_match_path(@match), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              match_path(@match),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>

<%- model_class = Match -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(:count => :many).titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:place) %></th>
      <th><%= model_class.human_attribute_name(:team_home_id) %></th>
      <th><%= model_class.human_attribute_name(:team_away_id) %></th>
      <th><%= model_class.human_attribute_name(:score_home) %></th>
      <th><%= model_class.human_attribute_name(:score_away) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= link_to match.id, match_path(match) %></td>
        <td><%= match.date %></td>
        <td><%= match.place %></td>
        <td><%= match.team_home ? link_to(match.team_home.name, team_path(match.team_home)) : '---' %></td>
        <td><%= match.team_away ? link_to(match.team_away.name, team_path(match.team_away)) : '---' %></td>
        <td><%= match.score_home %></td>
        <td><%= match.score_away %></td>
        <td><%=l match.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      match_path(match), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_match_path(match), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      match_path(match),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_match_path,
            :class => 'btn btn-primary' %>


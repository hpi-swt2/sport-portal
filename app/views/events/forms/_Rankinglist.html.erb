<div class="form-group order-1">
  <%= form.label :game_mode, class: 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= form.select(:game_mode, Rankinglist.game_modes.map { |k, _| [Rankinglist.human_game_mode(k), k] },
                    { selected: @event.game_mode, include_blank: t('events.new.select_game_mode') },
                    { class: 'form-control'}) %>
  </div>
</div>

<div class="form-group order-3">
  <%= form.label :initial_value, class: 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= form.text_field :initial_value, class: 'form-control' %>
  </div>
</div>

<div class="form-group order-5">
  <%= form.label :deadline, for: :event_deadline, class: 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= form.text_field :deadline,
                     id: :event_deadline,
                     class: 'form-control',
                     data: {provide: 'datepicker', 'date-format': 'yyyy-mm-dd'} %>
    <%= form.error_span(:deadline) %>
  </div>
</div>


<p id="notice"><%= notice %></p>

<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <% [:name, :description, :gamemode, :sport, :teamsport, :playercount, :gamesystem, :deadline].each do |attribute| %>
    <dt><strong><%= model_class.human_attribute_name(attribute) %>:</strong></dt>
    <dd><%= @event.send attribute %></dd>
  <% end %>
</dl>

<%# app/helpers/button_helper.rb %>
<%= back_btn %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_event_path(@event), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            event_path(@event),
            :method => 'delete',
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
            :class => 'btn btn-danger' %>
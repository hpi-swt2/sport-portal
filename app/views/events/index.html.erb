<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Gamemode</th>
      <th>Sport</th>
      <th>Teamsport</th>
      <th>Playercount</th>
      <th>Gamesystem</th>
      <th>Deadline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.gamemode %></td>
        <td><%= event.sport %></td>
        <td><%= event.teamsport %></td>
        <td><%= event.playercount %></td>
        <td><%= event.gamesystem %></td>
        <td><%= event.deadline %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%# Bootstrap navbar helper provided by twitter-bootstrap-rails gem  %>
<%# https://github.com/seyhunak/twitter-bootstrap-rails#navbar-helper %>

<%= nav_bar brand: t('appname'), responsive: true, fluid: true do %>
    <%= menu_group do %>
        <%= menu_item User.model_name.human(:count => :many).titleize, users_path %>
        <%= menu_item Team.model_name.human(:count => :many).titleize, teams_path %>
        <%= menu_item Event.model_name.human(:count => :many).titleize, events_path %>
        <%= menu_divider %>
        <%= menu_item t('events.create_event'), create_Event_path %>
        <%= menu_divider %>
    <% end %>
    <%= menu_group pull: :right do %>
        <% if user_signed_in? %>
            <%= drop_down (image_tag current_user&.avatar_url || image_path('missing_avatar.png'), class: "avatar") + " #{current_user.first_name}" do %>
                <!--Fill in more drop down menu items-->
                <%= menu_item t('devise.registrations.my_account'), edit_user_registration_path(current_user) %>
                <%= menu_item t('navbar.drop-down.dashboard'), dashboard_user_path(current_user) %>
                <%= menu_item t('navbar.drop-down.edit_profile'), user_profile_edit_path(current_user) %>
                <%= drop_down_divider %>
                <%= menu_item t('devise.registrations.sign_out'), destroy_user_session_path, method: :delete %>
            <% end %>
        <% else %>
            <%= menu_item t('devise.registrations.sign_in'), new_user_session_path , class: 'btn btn-default'%>
        <% end %>
    <% end %>
<% end %>
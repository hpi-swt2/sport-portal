<%# Bootstrap navbar helper provided by twitter-bootstrap-rails gem  %>
<%# https://github.com/seyhunak/twitter-bootstrap-rails#navbar-helper %>
<%= nav_bar brand: t('appname'), responsive: true do %>
  <%= menu_group do %>
    <%= menu_item User.model_name.human(:count => :many).titleize, users_path %>
    <%= menu_item Team.model_name.human(:count => :many).titleize, teams_path %>
    <%= menu_item Match.model_name.human(:count => :many).titleize, matches_path %>
    <%= menu_divider %>
    <% if user_signed_in? %>
      <%= menu_item nil, user_path(current_user), class: "navbar-brand avatar" do %>
        <%= current_user.first_name %>
        <span><%= image_tag current_user.avatar.url(:square) %></span>
      <% end %>
      <%= menu_divider %>
      <%= menu_item t('devise.registrations.sign_out'), destroy_user_session_path, method: :delete %>
    <% else %>
      <%= menu_item t('devise.registrations.sign_up'), new_user_registration_path %>
      <%= menu_item t('devise.registrations.sign_in'), new_user_session_path %>
    <% end %>
  <% end %>
<% end %>
<%- model_class = Team -%>
<%= form_for @team, :html => { :class => "form-horizontal team" } do |f| %>

  <%= render partial: "application/validation_errors", locals: {model: @team} %>

  <div class="form-group">
    <%= f.label t("helpers.name"), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
      <%= f.error_span(:name) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label t("helpers.teams.kind_of_sport"), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :kind_of_sport, :class => 'form-control' %>
      <%= f.error_span(:kind_of_sport) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label t("helpers.teams.description"), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :description, :class => 'form-control' %>
      <%= f.error_span(:description) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <label>
        <%= f.check_box :private %>&nbsp;<%=t '.private', :default => t("helpers.teams.private") %>
      </label>
      <%= f.error_span(:private) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                teams_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

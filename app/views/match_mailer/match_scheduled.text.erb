<%= t('mailer.hello', firstname: @user.first_name) %>

<%= t('.info_txt',
      opponent_team_name: @opponent_team.name,
      event_name: @match.event.name) %>

<% if @match.start_time %>
<%= t('match_mailer.start_time',
      start_date: I18n.localize(@match.start_time.to_date),
      start_time: @match.start_time.to_s(:time)) %>
<% end %>
<% if @match.place %>
<%= t('match_mailer.place', place: @match.place) %>
<% end %>

<%= t('.have_fun') %>

<%= t('mailer.closing', appname: t('appname')) %>
